// Firestore Security Rules for Islamic Kids Learning Platform
// Copy this to your Firebase Console: Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId || request.auth.uid != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false; // Never allow deletion
    }
    
    // Quizzes collection (public read, admin write)
    match /quizzes/{document=**} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if request.auth.token.admin == true;
    }
    
    // Questions collection (public read, admin write)
    match /questions/{document=**} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if request.auth.token.admin == true;
    }
    
    // User Quiz Progress
    match /users/{userId}/quizProgress/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Leaderboard (public read)
    match /leaderboard/{document=**} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }
    
    // User Points (update only by authorized)
    match /userPoints/{userId} {
      allow read: if request.auth.uid == userId || request.auth.uid != null;
      allow update: if request.auth.uid == userId;
    }
    
    // Parent emails (secure storage)
    match /parentEmails/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Admin users only
    match /adminUsers/{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}
